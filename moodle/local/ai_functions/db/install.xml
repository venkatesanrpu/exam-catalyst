<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/ai_functions/db" VERSION="20251129" COMMENT="XMLDB file for Moodle local/ai_functions"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_ai_functions_agents" COMMENT="Stores configurations for different AI function agents with per-function endpoints">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="agent_key" TYPE="char" LENGTH="100" NOTNULL="true" DEFAULT="" SEQUENCE="false" COMMENT="Unique identifier for the agent"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="" SEQUENCE="false" COMMENT="Display name of the agent"/>
        <FIELD NAME="config_data" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="JSON configuration containing function-specific endpoints and API keys"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="agent_key" UNIQUE="true" FIELDS="agent_key"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
